extends layout

block content
  .centerContent
    if user
      h1 You are already logged-in
    else
      aside.Register
        .square
        h2 Registration

        form(action="/registration", method="post")
          input(
            type="email",
            name="email"
            placeholder="E-mail"
            required
          )
          input(
            type="text",
            name="username"
            placeholder="Username"
            required
          )
          input(
            type="password",
            name="password"
            placeholder="Password"
            required
          )
          input(
            type="password",
            name="passwordConf"
            placeholder="Confirm Password"
            required
          )
          input(type="submit", value="Register")