extends layout

block content
  .centerContent
    aside.ChangePassword
      h2 Change Password

      form(action="/changePassword", method="post")
        input(
          type="password",
          name="newPassword"
          placeholder="New password"
          required
        )
        input(
          type="password",
          name="repeatPassword"
          placeholder="Repat new password"
          required
        )
        input(
          type="password",
          name="oldPassword"
          placeholder="Old password"
          required
        )
        input(
          type="submit",
          value="Change Password"
        )