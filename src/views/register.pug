block content
  aside.Register
    .square
    h2 Register

    form(action="/", method="post")
      input(
        type="email",
        name="email"
        placeholder="E-mail"
        required
      )
      input(
        type="text",
        name="username"
        placeholder="Username"
        required
      )
      input(
        type="password",
        name="password"
        placeholder="Password"
        required
      )
      input(
        type="password",
        name="passwordConf"
        placeholder="Confirm Password"
        required
      )
      input(type="submit", value="Register")